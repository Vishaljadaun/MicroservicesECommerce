{
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": { "Path": "/api/products/{**catch-all}" }
      },
      "orderRoute": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/api/orders/{**catch-all}" }
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authApi": { "Address": "http://localhost:5103" }
        }
      },
      "productCluster": {
        "Destinations": {
          "productApi": { "Address": "https://localhost:7160" }
        }
      },
      "orderCluster": {
        "Destinations": {
          "orderApi": { "Address": "http://localhost:5196" }
        }
      }
    }
  }
}
